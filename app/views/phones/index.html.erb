<div class="page-header">
  <h1>Phones</h1>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Digits</th>
      <th>Contact</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @phones.each do |phone| %>
        <tr class="contact_type_<%= phone.phone_type %>">
          <td><%= phone.digits %></td>
          <td><%= link_to phone.full_name, phone.contact if phone.contact %></td>
          <td><%= link_to 'Show', phone %></td>
          <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div>
  <%= paginate @phones, :theme => 'twitter-bootstrap-3' %>
</div>

<div>
  <%= link_to new_phone_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Add Phone
  <% end %>
</div>

<div class="addressbook-commands">
<%= link_to_unless_current raw("<span class='glyphicon glyphicon-plus'></span> Add Address for #{@contact.full_name}"), new_contact_address_path(@contact), :class => 'btn btn-default' %>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th class="addressbook-type"></th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Contact</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @addresses.each do |address| %>
        <tr class="contact_type_<%= address.address_type %>">
          <td><%= contact_type_icon address.address_type %></td>
          <td><%= address.street %>
            <% unless address.street_2.blank? %>
                &nbsp;
                <small>(<%= address.street_2 %>)</small>
            <% end %>
          </td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.zip %></td>
          <td><%= link_to address.full_name, address.contact if address.contact %></td>
          <td><%= link_to 'Edit', edit_contact_address_path(@contact, address) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div>
  <%= paginate @addresses, :theme => 'twitter-bootstrap-3' %>
</div>
<div>

</div>

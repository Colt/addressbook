<div class="page-header">
  <h1>Addresses</h1>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Contact</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @addresses.each do |address| %>
        <tr class="contact_type_<%= address.address_type %>">
          <td><%= address.street %>
            <% if address.street_2 %>
                &nbsp;<small>(<%= address.street_2 %>)</small>
            <% end %>
          </td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.zip %></td>
          <td><%= link_to address.full_name, address.contact if address.contact %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= paginate @addresses, :theme => 'twitter-bootstrap-3' %>

<%= link_to new_address_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Add Address
<% end %>


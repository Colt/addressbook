

<ul class="nav nav-tabs">
  <li class="<%= 'active' if current_page?(contacts_path) %>"><%= link_to "All", contacts_path %></li>
  <li class="<%= 'active' if current_page?(over50s_contacts_path) %>"><%= link_to "Over 50's", over50s_contacts_path %></li>
  <li class="<%= 'active' if current_page?(males_contacts_path) %>"><%= link_to "Male", males_contacts_path %></li>
  <li class="<%= 'active' if current_page?(females_contacts_path) %>"><%= link_to "Female", females_contacts_path %></li>
</ul>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th class="hidden-xs">Gender</th>
      <th>Date of Birth</th>
    </tr>
    </thead>

    <tbody>
    <% contacts.each do |contact| %>
        <tr class="<%= contact_card_class contact %>">
          <td><%= link_to contact.full_name, edit_contact_path(contact) %></td>
          <td class="hidden-xs"><%= contact_gender_display contact %></td>
          <td><%= contact.dob %> <span class="hidden-xs">(<%= distance_of_time_in_words_to_now contact.dob if contact.dob%> ago)</span></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= paginate contacts, :theme => 'twitter-bootstrap-3' %>
</div>

